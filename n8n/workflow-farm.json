        {
            "parameters": {
                "jsCode": "const input = $input.first().json.body || $input.first().json;\nconst m = input.metrics;\nlet status = 'normal';\nlet message = 'Farm conditions optimal.';\n\nif (m.soil_moisture < 20 || m.ph > 9 || m.ph < 4.5) {\n  status = 'critical';\n  message = 'üåæ CRITICAL: Soil conditions dangerous! Moisture=' + m.soil_moisture + '%, pH=' + m.ph;\n} else if (m.soil_moisture < 30 || m.ph > 8 || m.light_intensity > 1000) {\n  status = 'warning';\n  message = '‚ö†Ô∏è Warning: Soil needs attention. Moisture=' + m.soil_moisture + '%';\n}\n\nreturn [{\n  json: {\n    deviceId: input.deviceId || 'dev_farm_01',\n    domain: 'farm',\n    metrics: m,\n    status: status,\n    message: message,\n    timestamp: Date.now()\n  }\n}];"
            },
            "id": "5a5a5a5a-0005-0005-0005-000000000002",
            "name": "Evaluate Farm",
            "type": "n8n-nodes-base.code",
            "typeVersion": 2,
